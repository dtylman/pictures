{{define "title"}}Pictures{{end}}
{{define "head"}}{{end}}
{{define "content"}}
<div class="container">
    <div class="page-header">
        <h1>Search</h1>
    </div>
    <hr/>
    <form method="post">
        <div class="form-group">
            <div class="input-group">
                <input type="text" name="query" id="query" class="form-control" placeholder="Search ..."
                       value="{{.query}}"/>
                <span class="input-group-btn"> <button type="submit" class="btn btn-default">Search</button></span>
            </div>
        </div>
    </form>
    <h4>Searching for <a href="#">'{{.query}}'</a>
        <small>({{.total}} found)</small>
    </h4>
    <div class="row">
        {{range $facet := .facets}}
        <div class="col-lg-2"><a href="#">{{.Term}} ({{.Count}})</a></div>
        {{end}}
    </div>
    <hr/>
    <div class="row">
    {{range $hit := .hits}}
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <a href="image/{{.ID}}/view" class="thumbnail"><img src="thumb/{{.ID}}" alt="{{.ID}}"
                                                                class="img-responsive"></a>
        </div>
    {{end}}
    </div>
    <hr/>
    Next Page -->
    {{template "footer" .}}
</div>
{{end}}
{{define "foot"}}{{end}}