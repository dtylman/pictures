{{define "title"}}Pictures{{end}}
{{define "head"}}{{end}}
{{define "content"}}
<div class="container">
    <div class="page-header">
        <h1>Index {{.index_running}}</h1>
    </div>
    <form method="post">
        {{if .index_running}}
        <label>Index is running...</label>
        <button type="submit" class="btn btn-default" name="action" value="stop">Stop</button>
        {{else}}
        <button type="submit" class="btn btn-default" name="action" value="start">Start</button>

        {{end}}

    </form>
    {{template "footer" .}}
</div>
{{end}}
{{define "foot"}}{{end}}
