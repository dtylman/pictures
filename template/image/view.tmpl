{{define "title"}}Pictures{{end}}
{{define "head"}}{{end}}
{{define "content"}}
<div class="container">
    <div class="page-header">
        <h1>{{.image}}</h1>
    </div>
    <div class="col-lg-9">
        <caption>Image</caption>
        <a href="/image/{{.id}}" class="thumbnail" width="100%">
            <img src="/image/{{.id}}">
        </a>
    </div>
    <div class="col-lg-3">
        <caption>Details</caption>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
            </thead>

            <tbody>
            {{range $key, $value := .details}}
            <tr>
                <td>{{$key}}</td>
                <td>{{$value}}</td>
            </tr>

            {{end}}

            </tbody>

        </table>
    </div>
    {{template "footer"}}
</div>
{{end}}
{{define "foot"}}{{end}}