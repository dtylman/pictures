{{define "title"}}Pictures{{end}}
{{define "head"}}{{end}}
{{define "content"}}
<div class="container">
    <div class="page-header">
        <h1>{{.image.Name}}</h1>
        <a href="/nextimage">next</a>
        <a href="/previmage">prev</a>
    </div>
    <div class="col-lg-9">
        <caption>{{.image.Location}}</caption>
        <a href="/activeimage/{{.image.ID}}" class="thumbnail" width="100%">
            <img src="/activeimage/{{.image.ID}}">
        </a>
    </div>
    <div class="col-lg-3">
        <caption>Details</caption>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
            </thead>

            <tbody>
            {{range $key, $value := .image.Details}}
            <tr>
                <td>{{$key}}</td>
                <td>{{$value}}</td>
            </tr>

            {{end}}

            </tbody>

        </table>
    </div>
    {{template "footer"}}
</div>
{{end}}
{{define "foot"}}{{end}}